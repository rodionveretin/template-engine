{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*",
  ],
}